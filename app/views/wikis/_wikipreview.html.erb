<% @wikis.each do |wiki| %>
  <div class="media">
    <div class="media-body">

      <h4 class="media-heading">
        <%= link_to wiki.title, wiki %>
      </h4>

      <small>
        <%= body_preview(wiki) %>
      </small>

      <% if wiki.private? %>
        <h6>Private Wiki</h6>
      <% else %>
        <h6>Public Wiki</h6>
      <% end %>


    </div>
  </div>
<% end %>
