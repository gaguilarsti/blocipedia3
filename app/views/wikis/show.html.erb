<h1>
  <%= @wiki.title %> <br>
    <small>
      submitted <%= time_ago_in_words(@wiki.created_at) %> ago by USER <%= @wiki.user %>
    </small>
</h1>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @wiki.body %></p>

    <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success' %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger' %>


  </div>

  <% if current_user %>
    <div class="col-md-4">
      <%= link_to "New Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
    </div>
  <% end %>

</div>
